%% -*- erlang -*-
{ErlOpts0, Config0} = case lists:keytake(erl_opts, 1, CONFIG) of
                       false -> {[], CONFIG};
                       {value, {erl_opts, D}, Cfg} -> {D, Cfg}
                   end,

ErlOpts = case list_to_integer(erlang:system_info(otp_release)) of
           N when N >= 27 ->
               [warn_missing_spec, warn_untyped_record | ErlOpts0];
           _ ->
               ErlOpts0
       end,

[{erl_opts, ErlOpts} | Config0].
